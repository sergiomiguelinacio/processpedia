<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .wrapper { width: 100%; height: 100%; background-color: #FFF; text-align: center; }
    .loadingView { width: 100%; text-align: center; }
    .image { width: 170px; height: 170px; }
    .message {
      font-size: 16px;
      font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
      font-weight: 300;
      color: #AAA;
    }
  </ui:style>
  <g:VerticalPanel addStyleNames="{style.wrapper}" verticalAlignment="ALIGN_MIDDLE">
    <g:VerticalPanel addStyleNames="{style.loadingView}" horizontalAlignment="ALIGN_CENTER">
      <g:Image addStyleNames="{style.image}" url="themes/default/images/loading.gif" />
      <g:Label addStyleNames="{style.message}" ui:field="loadingMessageContainer" />
    </g:VerticalPanel>
  </g:VerticalPanel>
</ui:UiBinder>