<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .container {
      width: 100%;
      height: 100%;
      text-align: center;
    }
    .splashView { width: 100%; text-align: center; }
    .image {
      margin-bottom: 25px;
    }
    .message {
      text-align: center;
      font-size: 18px;
      font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
      font-weight: bold;
      color: #888;
      -moz-user-select: none;
      -khtml-user-select: none;
      user-select: none;
      cursor: default;
    }
  </ui:style>
  <g:VerticalPanel addStyleNames="{style.container}" verticalAlignment="ALIGN_MIDDLE">
    <g:VerticalPanel addStyleNames="{style.splashView}" horizontalAlignment="ALIGN_CENTER">
      <g:Image addStyleNames="{style.image}" ui:field="imageContainer" />
      <g:Label addStyleNames="{style.message}" ui:field="messageContainer"/>
    </g:VerticalPanel>
  </g:VerticalPanel>
</ui:UiBinder>