<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .page {
      width: 100%;
      height: 100%;
      background-image: url('themes/default/images/background.png');
      vertical-align: middle;
      text-align: center;
    }
    .activationBox {
      margin: 0 auto;
      width: 400px;
      background-color: #FA0;
      padding-top: 20px;
      padding-bottom: 10px;
      border-radius: 10px;
      -webkit-border-radius: 10px;
      -moz-border-radius: 10px;
      opacity: 1;
    }
    .activationTitle {
      color: black;
      font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
      font-size: 34px;
      font-weight: bold;
      margin-bottom: 20px; }
    .activationMessage {
      padding: 5px 8px;
      font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
      font-size: 16px;
      font-weight: normal;
    }
    .goToLoginPageButton {
      width: 265px;
      font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
      font-size: 15px;
      font-weight: bold;
      margin-bottom: 10px;
    }
  </ui:style>
  <g:VerticalPanel addStyleNames="{style.page}" verticalAlignment="ALIGN_MIDDLE">
    <g:VerticalPanel addStyleNames="{style.activationBox}" horizontalAlignment="ALIGN_CENTER">
      <g:Label addStyleNames="{style.activationTitle}" ui:field="activationTitleContainer" />
      <g:Label addStyleNames="{style.activationMessage}" ui:field="activationMessageContainer" />
      <g:Button addStyleNames="{style.goToLoginPageButton}" ui:field="goToLoginPageAction" />
    </g:VerticalPanel>
  </g:VerticalPanel>
</ui:UiBinder>