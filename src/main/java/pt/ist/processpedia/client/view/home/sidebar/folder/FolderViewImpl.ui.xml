<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .folderViewContainer {
      width: 100%;
      padding: 3px 3px;
      margin-bottom: 4px;
    }
    .folderIcon {
      width: 15px;
      height: 15px;
      vertical-align: bottom;
    }
    .folderLabel {
      text-align: right;
      color: white;
      font-size: 11px;
      font-family: 'Helvetica-Neue', Helvetica, Arial, sans-serif;
      font-weight: normal;
      border: 0px;
      background: transparent;
      -webkit-border-radius: 5px;
      cursor: pointer;
      vertical-align: bottom;
    }
    .folderCount {
      font-family: 'Helvetica-Neue', Helvetica, Arial, sans-serif;
      font-size: 11px;
      font-weight: bold;
      color: black;
      background-color: white;
      -webkit-border-radius: 2px;
      border-radius: 2px;
      -moz-border-radius: 2px;
      text-align: center;
      padding: 2px 2px;
    }
  </ui:style>
  <g:HorizontalPanel addStyleNames="{style.folderViewContainer}">
    <g:cell width="17">
      <g:Image styleName="{style.folderIcon}" ui:field="folderIcon"/>
    </g:cell>
    <g:Button styleName="{style.folderLabel}" ui:field="folderAction"/>
    <g:cell width="15" verticalAlignment="ALIGN_MIDDLE">
      <g:Label styleName="{style.folderCount}" ui:field="folderCount"/>
    </g:cell>
  </g:HorizontalPanel>
</ui:UiBinder>