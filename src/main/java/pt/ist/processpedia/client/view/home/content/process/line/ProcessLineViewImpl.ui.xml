<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:style>
    .container {
      width: 100%;
      padding: 10px 10px;
    }
    .title {
      font-family: 'Helvetica-Neue', Helvetica, Arial, sans-serif;
      font-size: 24px;
      font-weight: bold;
      margin-bottom: 10px;
    }
    .label {
      font-family: 'Helvetica-Neue', Helvetica, Arial, sans-serif;
      font-size: 15px;
      font-weight: bold;
      margin-bottom: 3px;
    }
  </ui:style>
  <g:HorizontalPanel addStyleNames="{style.container}" verticalAlignment="ALIGN_MIDDLE">
    <g:Label styleName="{style.title}" ui:field="senderNameContainer"/>
    <g:Label styleName="{style.processTitle}" ui:field="processTitleContainer"/>
    <g:Label styleName="{style.requestTitle}" ui:field="requestTitleContainer"/>
  </g:HorizontalPanel>
</ui:UiBinder>